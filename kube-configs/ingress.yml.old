# kube-configs/ingress.yml
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: python-app
  namespace: default
spec:
  ingressClassName: nginx
  rules:
  - host: app.local
    http:
      paths:
      - path: /app
        pathType: Prefix
        backend:
          service:
            name: python-app
            port:
              number: 8080
  - host: localhost
    http:
      paths:
      - path: /app
        pathType: Prefix
        backend:
          service:
            name: python-app
            port:
              number: 8080
